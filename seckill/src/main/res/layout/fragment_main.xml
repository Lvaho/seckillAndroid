<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.under_bar_fragment.MainFragment"
    android:background="@color/gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/customize_bar_rl"
        android:layout_height="40dp"
        android:background="@color/red">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/task_back_ll"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="@drawable/dingwei" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="绍兴市"
                android:id="@+id/main_city"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/qrcode_scan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/scancide"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <com.xuexiang.xui.widget.XUIObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@color/white">
                    <com.youth.banner.Banner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageBanner">
                    </com.youth.banner.Banner>
                    <com.xuexiang.xui.widget.textview.MarqueeTextView
                        android:id="@+id/tv_marquee"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="20dp"
                        android:background="#E1E1E1dd"
                        android:layout_gravity="bottom"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <com.qweather.plugin.view.HorizonView
                android:id="@+id/horizon_view"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/main_fl_fun">
            </androidx.recyclerview.widget.RecyclerView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/tuijian_task"
                            android:layout_weight="1"
                            android:layout_margin="5dp">
                        </ImageView>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="推荐活动"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5">
                        </TextView>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:id="@+id/tuijian_task_ll">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="更多"
                                android:textSize="15sp"
                                android:textColor="@color/red">
                            </TextView>
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/right_point">
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/main_tuijian_tasks">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已经到底了哦~"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>
    </com.xuexiang.xui.widget.XUIObservableScrollView>


</LinearLayout>
