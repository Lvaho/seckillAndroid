<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/seckill_deatil_ll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/seckill_detail_tv"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="银行产品介绍银行产品介绍银行产品介绍银行产品介绍银行产品介绍银行产品介绍"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView
                    android:id="@+id/task_status_img"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:layout_toRightOf="@id/seckill_detail_tv"
                    android:foregroundGravity="center"
                    android:src="@drawable/doing">

                </com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/seckill_detail_tv"
                    android:layout_marginBottom="5dp"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/seckill_endtime_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:text="结束时间201912.512" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/stock" />

                    <TextView
                        android:id="@+id/seckill_stockcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="10000"
                        android:textColor="#8D9090"
                        android:textSize="12sp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/details" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="详情"
                        android:textColor="#8D9090"
                        android:textSize="12sp">


                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>