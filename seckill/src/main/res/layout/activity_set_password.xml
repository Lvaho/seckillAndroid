<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetPasswordActivity"
    android:orientation="vertical"
    android:background="#F0F0F0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/customize_bar_rl"
        android:layout_height="40dp"
        android:background="@color/red"
        >

        <LinearLayout
            android:id="@+id/setpassword_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/setpassword_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/back1" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请设置密码"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:text="旧密码"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pwdtwo_et20"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FBFCFC"
                android:hint="6-20位字母或数字"
                android:inputType="text"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:text="新密码"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pwdtwo_et21"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FBFCFC"
                android:hint="6-20位字母或数字"
                android:inputType="text"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="80dp"
                android:gravity="center_horizontal"
                android:text="确认密码"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pwdtwo_et2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="#FBFCFC"
                android:hint="6-20位字母或数字"
                android:inputType="text"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/setpassword_bt"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/red"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        />

</LinearLayout>